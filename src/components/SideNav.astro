---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"

type Props = {
    class_list?: string;
};

const {class_list = ""} = Astro.props
---

<ul class={class_list}>
    <li><a href="/" class={ currentPath === "" ? "navsidbarLiActive" : "navsidbarLi"}>Home</a></li>
    <li><a href="/about" class={ currentPath === "about" ? "navsidbarLiActive" : "navsidbarLi"}>About</a></li>
    <li><a href="/blog" class={currentPath=== "blog" ? "navsidbarLiActive" : "navsidbarLi"}>Blog</a></li>
</ul>

