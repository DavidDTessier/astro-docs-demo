---
import Layout from '../layouts/BaseLayout.astro';
import H1 from "../components/H1.astro";
import Main from "../components/Main.astro";
import { Image } from 'astro:assets';
import BaseLayout from '../layouts/BaseLayout.astro';

export const prerender = true
---

<BaseLayout>
	<Main>
		<div class="w-full sm:pt-60 h-auto min-h-[100%] justify-center align-middle flex flex-row content-stretch">
		
			<div class="flex flex-wrap min-h-full max-w-full m-0">
				<Image src="/images/me.jpeg"  
				width={400}
				height={400 / 1.5}
				alt="Me"
				class="ml-10 border-8 rounded-3xl border-gray-400"/>
				<div class="m-10 pt-10">
					<H1 text="David Tessier" />
					<p class=" text-slate-400 mt-8">
						Hi! ðŸ‘‹ I am a Cloud Security Architect specializing in all things Cloud! <br />
						Welcome to my website which is intended to showcase my portfolio of work.
					</p>
					<div class="flex flex-wrap gap-4 ">
						<div class="pt-8">
							<button aria-label="About" class="p-2 font-mono font-bold hover:border-slate-600 hover:bg-slate-600 hover:text-white border-slate-400 bg-white rounded-md border-2">
								<a href="/about">Learn more</a>
							</button>
						</div>
						<div class="pt-8">
							<button aria-label="Contact Me" class="p-2 font-mono font-bold hover:border-slate-600 hover:bg-slate-600 hover:text-white border-slate-400 bg-white rounded-md border-2">
								<a href="mailto:david@daviddtessier.ca">Contact Me</a>
							</button>
						</div>
					</div>
					
				</div>
				
			</div>
		</div>
	</Main>
</BaseLayout>

